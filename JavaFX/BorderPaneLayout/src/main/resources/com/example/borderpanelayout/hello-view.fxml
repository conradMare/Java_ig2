<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.borderpanelayout.HelloController">

    <top>
        <Label text="This label is at the top" alignment="center"
               style="-fx-border-color: blue; -fx-border-size: 3; -fx-border-style: dashed"
               BorderPane.alignment="center"/>
    </top>

    <bottom>
        <HBox spacing="10" alignment="top_right">
            <Button text="Ok" prefWidth="90"/>
            <Button text="Cancel" prefWidth="90"/>
            <Button text="Help" prefWidth="90"/>
        </HBox>
    </bottom>
</BorderPane>
